#include <iostream>
using namespace std;

class SberBank{
    public:
    int number;
    float balance;
    SberBank(int a, float b);
    float put(float V){
    balance=balance+V;
    return 0;
    }
    float take(float V){
    balance=balance-V;
    return 0;
    }
    
};
SberBank::SberBank(int a=1234, float b=50){
    number=a;
    balance=b;
}
    
int main(){
    SberBank firstCard(1234, 50);

    SberBank *ukasatel=&firstCard;
    
    ukasatel -> put(55);
    cout << firstCard.balance << endl;
    
    ukasatel -> take(87);
    cout << firstCard.balance << endl;
    
    return 0;
}
