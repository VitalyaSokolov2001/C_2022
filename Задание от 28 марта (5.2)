/***************************************************************************************

Напишите функцию Sort(), которая принимает массив из 10 чисел и сортирует их по убыванию

**************************************************************************************/

#include <iostream>

using namespace std;

void Sort(int a[10])
{
    for (int i=0; i < 10; i++)
    {
        for (int j = i + 1; j < 10; j++)
        {
            if(a[i] < a[j])
            {
                swap(a[i], a[j]);
            }
        }
    }
}

int main()
{
    
    int a[10] = {1, 8, 3, 5, 4, 6, 7, 10, 9, 2, };
    
    for (int i = 0; i < 10; i++)
    {
        cout << a[i] << ", ";
    }
    cout << "Массив из 10 чисел. ";
    cout << '\n';  
    Sort(a);
    for (int i = 0; i < 10; i++)
    {
        cout << a[i] << ", ";
    }
    cout << "Массив из 10 чисел по убыванию. ";
    cout << '\n';
       
    return 0;
}
