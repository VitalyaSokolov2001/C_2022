получить функцией strlen() из библиотеки cstring.

*************************************************/


#include <iostream>
using namespace std;
 
int main()
{
setlocale(LC_ALL, "rus");
char n[7];
cout << "Введите число:" << '\n';
    char *a;
    cin >> n;
    a = n;
    while (*a){
        (*a)++;
        a++;
    }
cout << n << " - результат " << endl; 
return 0;
}
