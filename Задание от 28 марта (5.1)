/***************************************************************************************

Напишите функцию SquaredSum(), которая принимает два дробных числа и возвращает квадрат их суммы

**************************************************************************************/
#include <iostream>
#include <math.h>
using namespace std;
 
double SquaredSum(double x, double y) {
    return pow((x + y), 2);
}
int main() {
    double x, y;
    cout << "Введите число: ";
    cin >> x;
    cout << "Введите число: ";
    cin >> y;
    cout << SquaredSum(x, y) << "\n";
    return 0;
}
