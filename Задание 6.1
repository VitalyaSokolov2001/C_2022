/******************************************************************************

Напишите функцию reverse(), которая принимает строку и выводит ее на экран в отраженном виде:

*******************************************************************************/


#include <iostream>
using namespace std;

void reverse(char *c) {  
  if (c[0]=='\0') 
    return; 
  else { 
    reverse(&c[1]); 
    cout<<c[0];
  }
}

int main() {  
   char s[20];
   cout<<"Enter the text: ";
   cin>>s; 
   cout<<"reverse: ";
   reverse(s);
   return 0;
} 
